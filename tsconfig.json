{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "sourceMap": true,
    "types": [
      "lodash-es",
      "webpack-env"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
